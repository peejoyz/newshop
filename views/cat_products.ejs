<% include _layouts/header %>

<div class="row products" style="margin-bottom: 10px;">
                <% products.forEach(function(p) { %>
                    <div class="wrapper product-box col-xs-12 col-sm-4 py-sm-5 py-4">
                       <a class="pa" href="/products/<%= p.category %>/<%= p.slug %>">
                           <img style="margin-bottom: 15px"  class="pimage" src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
                       </a>
                       <h6 style="margin-bottom: 15px; font-weight:200;"><%= p.title %></h6>
                       <h6 style="margin-bottom: 15px; font-weight: 200;"> <b> # <%= parseFloat(p.price).toFixed(2) %> </b> </h6>
                       <a style="margin-bottom: 15px" class="button2 vd" href="/products/<%= p.category %>/<%= p.slug %>">View Details</a>
                    </div>
               <% }); %>
        
</div>

<% include _layouts/footer %>   